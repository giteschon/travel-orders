
@{
    ViewBag.Title = "HtmlReport";
}

<h2>HtmlReport</h2>

<div class="form-horizontal">

    <div class="row">
        <div class="form-group">
            <div class="col-md-6">
                @Html.Label("Kilometeres Sum:")

                @Html.TextBox("txtKm", (double)ViewBag.km, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                @Html.Label("Average Speed:")

                @Html.TextBox("txtSpeed", (double)ViewBag.avgSpeed, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
    </div>

    


    <div class="form-group">
        @Html.Label("Services:")
    </div>
    @foreach (var s in ViewBag.services)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <tr class="info">
                    <td>
                        @s.DateOfService
                    </td>
                    <td>
                        @s.Price
                    </td>
                    <td></td>
                </tr>
            </tbody>
            @foreach (var i in s.ItemServices)
            {
                
                <tbody>
                    <tr class="active">
                        <td></td>
                        <td></td>
                        <td>
                            @i.Details
                        </td>

                    </tr>
                </tbody>
            }

        </table>
    }

</div>